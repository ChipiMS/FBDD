<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="banco.fxml.CuentaController">
    <Label text="Cuentas"></Label>
    <TableView fx:id="tableCuenta"></TableView>
    <GridPane fx:id="actionsCuenta" visible="false">
        <Label text="Saldo " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtSaldoCuenta" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Titular" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cmbClienteCuenta" GridPane.columnIndex="1" GridPane.rowIndex="1"/> 
        <Label text="Sucursal" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cmbSucursalCuenta" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    <HBox>
        <Button fx:id="btnAgregarCuenta" text="Agregar"></Button>
        <Button fx:id="btnModificarCuenta" text="Modificar" disable="true" ></Button>
        <Button fx:id="btnBorrarCuenta" text="Borrar" disable="true" ></Button>
    </HBox>
</VBox>
